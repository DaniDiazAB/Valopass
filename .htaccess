# Desactivar el listado de directorios
Options -Indexes

# Especificar el archivo por defecto al entrar en una carpeta
DirectoryIndex public/index.php

# Activar el motor de reescritura
RewriteEngine On

# Definir el directorio base del proyecto
RewriteBase /valopass/

# --- Excepciones: no reescribir si el archivo o directorio existe ---
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# --- Redirecciones limpias ---
# Página principal
RewriteRule ^$ public/index.php [L]

# Páginas HTML dentro de /views/
RewriteRule ^login$ public/views/login.php [L]
RewriteRule ^aviso$ public/views/aviso.html [L]
RewriteRule ^recuperar$ public/views/recuperar.html [L]
RewriteRule ^crear-usuario$ public/views/crear-usuario.php [L]
# RewriteRule ^perfil$ public/views/perfil.php [L]

# --- Opcional: manejar 404 personalizados ---
ErrorDocument 404 /valopass/public/views/error.php


RewriteRule ^([a-zA-Z0-9_-]+)$ public/views/perfil.php?user=$1 [L,QSA]





